{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "sulinys/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "sulinys/multi-nginx",            
            "essential": true,
            "portMappings":[
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        },
        {   "name": "server",
            "image": "sulinys/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "sulinys/multi-worker",            
            "essential": false
        }
    ]
}